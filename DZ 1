while True:
    a = input ('Введите первое число ')
    if not a.isdigit():
        print('You must enter an integer')
    else:
        a = int(a)
        b = input ('Введите второе число ')
        if not b.isdigit():
            print('You must enter an integer')
        else:
            b = int(b)
            c = input ('Введите третье число ')
            if not c.isdigit():
                print('You must enter an integer')
            else:
                c = int(c)
                z = a + b + c
                print('Сумма введённых чисел равна %s' %(z))
                break
